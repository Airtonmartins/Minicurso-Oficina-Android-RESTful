criar o projeto:

#colocar o compile para o gredle:

compile 'com.squareup.retrofit:retrofit:2.0.0-beta2'
compile 'com.squareup.retrofit:converter-gson:2.0.0-beta2'

#colocar id para textview:

coloca android:id="@+id/txtHello" e tira o android:text="Hello World!"

# criar dominio Helloworld dentro do pacote dominio

public class Helloworld {
    private Integer id;
    private String msg;


    public Integer getId() {
        return id;
    }

    public void setId(Integer id) {
        this.id = id;
    }

    public String getMsg() {
        return msg;
    }

    public void setMsg(String msg) {
        this.msg = msg;
    }
}


